<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="82.0" prefWidth="288.0" style="-fx-background-color: Darkgreen;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="minecraft.ForgotPasswordController">
    <children>
      <VBox alignment="CENTER" layoutX="21.0" layoutY="24.0" spacing="10.0">
         <children>
            <TextField fx:id="emailField" promptText="Enter your email" />
            <TextField fx:id="codeField" promptText="Enter verification code" />
            <Label fx:id="errorLabel" textFill="red">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button layoutX="187.0" layoutY="27.0" onAction="#handleGetCodeButtonAction" style="-fx-background-radius: 20;" text="Get Code">
         <font>
            <Font name="REEJI-Sharp-BlodGB1.0 Regular" size="12.0" />
         </font>
      </Button>
      <Button layoutX="187.0" layoutY="63.0" onAction="#handleVerifyButton" style="-fx-background-radius: 20;" text="Verify">
         <font>
            <Font name="REEJI-Sharp-BlodGB1.0 Regular" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
