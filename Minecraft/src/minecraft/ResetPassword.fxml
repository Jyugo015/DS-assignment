<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="154.0" prefWidth="289.0" style="-fx-background-color: darkgreen;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="minecraft.ResetPasswordController">
    <children>
      <VBox alignment="CENTER" layoutX="70.0" layoutY="15.0" prefHeight="86.0" prefWidth="150.0" spacing="10.0">
         <children>
            <PasswordField fx:id="newPasswordField" promptText="Enter new password" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" />
            <Label fx:id="errorLabel" textFill="red">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            <Button onAction="#handleConfirmButtonAction" prefHeight="7.0" prefWidth="68.0" text="Confirm">
               <font>
                  <Font name="REEJI-Sharp-BlodGB1.0 Regular" size="12.0" />
               </font></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
